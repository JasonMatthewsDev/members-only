<%= form_for(@user, url: root_path) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation, 'Confirm' %>
  <%= f.password_field :password_confirmation %>
      
  <%= f.submit 'Sign Up' %>
<% end %>